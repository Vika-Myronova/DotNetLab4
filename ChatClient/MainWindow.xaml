<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="478" Width="727" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="0,0,10,7">
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="35" Margin="271,19,0,0" TextWrapping="Wrap" Text="User name" VerticalAlignment="Top" Width="408"/>
        <Button x:Name="bConnDiscon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="23,19,0,0" VerticalAlignment="Top" Height="35" Width="185"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="198" Margin="23,82,0,0" VerticalAlignment="Top" Width="637" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="94" Margin="23,307,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="637" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
